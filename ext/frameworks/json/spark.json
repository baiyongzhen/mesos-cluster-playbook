{
    "id": "spark",
    "env": {
        "SPARK_ZK_URL": "10.142.142.10:2181",
        "SPARK_MESOS_MASTER_URL": "mesos://zk://10.142.142.10:2181/mesos"
    },
    "instances": 1,
    "cpus": 0.1,
    "mem": 512,
    "ports": [
        31002,
        31003
    ],
    "requirePorts": true,
    "container": {
        "type": "DOCKER",
        "volumes": [
            {
                "containerPath": "/etc/localtime",
                "hostPath": "/etc/localtime",
                "mode": "RO"
            }
        ],
        "docker": {
            "image": "mymesos/spark-mesos:v1.5.2_mesos-0.25.0_hadoop-2.6",
            "network": "HOST",
            "forcePullImage": true
        }
    },
    "healthChecks": [
        {
            "protocol": "TCP"
        }
    ]
}